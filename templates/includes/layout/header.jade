html
	body
	.off-canvas-wrapper
		.off-canvas-wrapper-inner(data-off-canvas-wrapper='')
			.title-bar(data-responsive-toggle='widemenu', data-hide-for-medium)
				.title-bar-left
					button.menu-icon(type='button', data-open='offCanvasLeft')
					span.title-bar-title Hacksmiths
			#example-menu.top-bar
				.top-bar-left
					ul.menu.title-area
						li.name
							a(href='/')
								img(alt='Hacksmiths logo', id='logo', src='/images/hacksmiths-logo-text.png')
				section.top-bar-section
					ul.right
						li(class=(section === 'home' ? 'active' : '' ))
							a(href='/') Home
						li(class=(section === 'events' ? 'active' : '' ))
							a(href='/events') Events
						li(class=(section === 'members' ? 'active' : '' ))
							a(href='/members') Members
						li(class=(section === 'blog' ? 'active' : '' ))
							a(href='/blog') Blog
						if user
							ul.has-dropdown
								li
									a(href='/me') My Profile
								li
									a(href='/signout') Sign out
						else
							li
								a(href='/join').js-auth-trigger Join
							li
								a(href='/signin', data-from='/', data-initial='signin').js-auth-trigger Sign in
		.off-canvas-content(data-off-canvas-content='')
